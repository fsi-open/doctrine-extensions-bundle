{% block fsi_file_widget %}
{% spaceless %}
    {% if form.vars.data is not null %}
        <div>
            <a href="{{ fsi_file_asset(form.vars.data, 'uploaded') }}" data-for="{{ form.vars.id }}" target="_blank">{{ form.vars.data|fsi_file_basename }}</a>
        </div>
    {% endif %}
    {% set type = type|default('file') %}
    {{ block('form_widget_simple') }}
{% endspaceless %}
{% endblock %}